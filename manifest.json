{
  "name": "Kerrang to iTunes",
  "version": "1.0",
  "homepage_url" : "http://comicmac.com/2012/01/kerrang-to-itunes-chrome-extension/",
  "icons": {
  	"16": "icon.png",
    "48": "icon48.png",
	"128": "icon128.png" 
  },
  "description": "Grabs current song and artist on Kerrang! Player and opens iTunes with results for that song",
  "permissions": [
    "tabs", "http://*.kerrangradio.co.uk/*"
  ],
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png"
  }
}